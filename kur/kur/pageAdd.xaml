<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kur.pageAdd">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Добавить фото" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
            <Image x:Name="imageAdd" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Image>
            <Label Text="Наименование товара" VerticalOptions="CenterAndExpand" HorizontalOptions ="CenterAndExpand"/>
            <Entry x:Name="nameProduct"/>
            <Label Text="Цена товара" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
            <Button Text="Добавить" Clicked="Button_Add"/>
            <Button Text="Изменить" Clicked="Button_Change"/>
            <Button Text="Удалить" Clicked="Button_Del"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>